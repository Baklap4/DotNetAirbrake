{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["notifier", "errors"],
  "additionalProperties": false,
  "properties": {
    "notifier": {
      "type": "object",
      "required": ["name", "version", "url"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "message", "backtrace"],
        "additionalProperties": false,
        "properties": {
          "type": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "backtrace": {
            "type": "array",
            "required": ["file", "function", "line", "column"],
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "file": {
                  "type": "string"
                },
                "function": {
                  "type": "string"
                },
                "line": {
                  "type": "number"
                },
                "column": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    },
    "context": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "environment": { "type": "string" },
        "component": { "type": "string" },
        "action": { "type": "string" },
        "os": { "type": "string" },
        "language": { "type": "string" },
        "version": { "type": "string" },
        "url": { "type": "string" },
        "userAgent": { "type": "string" },
        "rootDirectory": { "type": "string" },
        "userId": { "type": "string" },
        "userUsername": { "type": "string" },
        "userName": { "type": "string" },
        "userEmail": { "type": "string" }
      }
    },
    "environment": { "type": "object" },
    "session": { "type": "object" },
    "params": { "type": "object" }
  }
}